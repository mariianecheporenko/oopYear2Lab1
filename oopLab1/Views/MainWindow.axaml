<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:oopLab1.ViewModels"
        x:Class="oopLab1.Views.MainWindow"
        x:DataType="vm:TableViewModel" 
        Title="OopLab1 - Електронні Таблиці">

    <Design.DataContext>
        <vm:TableViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="5" Margin="5" HorizontalAlignment="Center">
            <Button Content="Зберегти" Command="{Binding SaveCommand}"/>
            <Button Content="Завантажити" Command="{Binding LoadCommand}"/>
            <Button Content="Обчислити" Command="{Binding CalculateCommand}"/>
            <Button Content="Додати Рядок" Command="{Binding AddRowCommand}"/>
            <Button Content="Додати Стовпчик" Command="{Binding AddColumnCommand}"/>
            <Button Content="Довідка" Command="{Binding HelpCommand}"/>
            <ToggleButton 
                Content="{Binding ModeButtonText}"
                IsChecked="{Binding IsFormulaMode, Mode=TwoWay}"
                Command="{Binding ToggleFormulaModeCommand}"
                Margin="5"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Grid x:Name="TableGrid" />
        </ScrollViewer>
    </Grid>
</Window>